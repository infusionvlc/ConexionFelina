<h2>¿A qué colonia pertenece?</h2>
<%= form_for(@cat, :url => wizard_path, :method => :put) do |f| %>
  <div class="field">
    <%= f.label :colony %><br>
    <%= f.select(:colony_id, Colony.all.collect {|u| [u.name, u.id]}, {:prompt => 'Select'}, {class: 'form-control'}) %><br/>
  </div>
  <br>
  <%= f.submit 'Siguiente', :class => 'btn btn-primary' %>
<% end %>
