<h1><%= t('cats.wizard_abandoned_intro') %></h1>
<%= form_for(@cat, :url => wizard_path, :method => :put) do |f| %>
  <%= react_component("Pagination", props: {nPages: 6, currentPage: 3, backText: t('shared.back'), nextText: t('shared.next'), backUrl: previous_wizard_path}, prerender: false) %>
  <%= render 'cat_errors' %>
  <div class="field">
    <%= f.label :abandoned_date %><br>
    <%= react_component("Input", props: {name: 'cat[abandoned_date]', type: 'date', size:'full-size'}, prerender: false) %>
  </div>
  <br>
<% end %>
