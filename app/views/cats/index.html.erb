<h1>Cats#index</h1>
<% @cats.each do |cat| %>
    <div class="card">
      <div class="card-container">
      <div class="basic_info">
        <%= image_tag(cat.avatar) %>
        <%= link_to cat.name, "cats/#{cat.id}" %>
       </div>
      <div class="advanced_info">
        <%= cat.bio %><br/>
        <%= I18n.t 'cats.birthDate'%> <%= cat.birthdate_date %><br/>        
        <%= I18n.t 'cats.gender'%> <%= cat.gender %><br/>
        <%= I18n.t 'cats.sterilized'%> <%= cat.sterilized %><br/>
        <% if !cat.abandoned_date.nil?%>
          <%= I18n.t 'cats.abandonedDate'%> <%= cat.abandoned_date %><br/>
        <% end %>
        <%= I18n.t 'cats.document'%> <%= cat.document %><br/>
        <% if !current_user.nil? && (current_user.role == 'volunteer' || current_user.role == 'admin') %>
             <%= link_to  "Edit", edit_cat_path(cat.id) %>
             <%= link_to  "Destroy", cat_path(cat.id), method: :delete %>
             <%= link_to  "New suffering", new_suffering_path(:cat_id => cat.id) %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
